<% @flats.each do |flat| %>
<div class="col-md-4">
  <div class="flat-card">
    <div class="flat-card-image"></div>
    <div class="flat-card-content">
      <div class="flat-card-title">
        <h4><%= flat.name %></h4>
      </div>
      <p><%= flat.address %></p>
    </div>
  </div>
</div>
<% end %>
