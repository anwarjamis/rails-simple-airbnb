<div class="row">
  <div class="col-12">
    <h1>All our flats</h1>
  </div>
</div>
<div class="row">
  <div class="column">
    <p>All <%= Flat.all.size  %> flats.</p>
  </div>
</div>
<div class="row">
  <% @flats.each do |flat| %>
  <div class="col-md-4">
    <div class="flat-card">
      <div class="flat-card-image"></div>
      <div class="flat-card-content">
        <div class="flat-card-title">
          <h4><%= flat.name %></h4>
        </div>
        <p><%= flat.address %></p>
        <div class="flex">
          <div class="flex">
            <i class="material-icons me-2">Guests: </i>
            <span><%= flat.number_of_guests %></span>
          </div>
          <div class="flex ms-3">
            <i class="material-icons me-2">Price: </i>
            <span><%= flat.price_per_night %></span>
          </div>
        </div>
      </div>
      <div class="card-actions">
        <%= link_to 'More info', flat_path(flat) %>
        <%= link_to 'Edit', edit_flat_path(flat), class: 'ms-3 text-warning' %>
        <%= link_to 'Remove', flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' }, class: 'ms-3 text-danger' %>
      </div>
    </div>
  </div>
  <% end %>
</div>
